
@{
    Layout = null;
}

<!doctype html>
<html lang="es">

<head>

    <meta charset="utf-8" />
    <title>Login | Q'MER</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Sisitema de control y monitoreo" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Assets/images/logo.ico">

    <!-- owl.carousel css -->
    <link rel="stylesheet" href="~/Assets/libs/owl.carousel/assets/owl.carousel.min.css">

    <link rel="stylesheet" href="~/Assets/libs/owl.carousel/assets/owl.theme.default.min.css">

    <!-- Bootstrap Css -->
    <link href="~/Assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

</head>

<body class="auth-body-bg">

    <div>
        <div class="container-fluid p-0">
            <div class="row g-0">

                <div class="col-xl-9">
                    
                            <img class="img-fluid" src="~/Assets/images/post.png" style="width:100%;" alt="Alternate Text" />
                       
                </div>
                <!-- end col -->

                <div class="col-xl-3">
                    <div class="auth-full-page-content p-md-5 p-4">
                        <div class="w-100">

                            <div class="d-flex flex-column h-100">
                                <div class="mb-4 mb-md-5">
                                    <a href="~/Home/Index" class="d-block auth-logo">
                                        <img src="~/Assets/images/logo-dark.png" alt="" height="35" class="auth-logo-dark">
                                        <img src="~/Assets/images/logo-light.png" alt="" height="35" class="auth-logo-light">
                                    </a>
                                </div>
                                <div class="my-auto mt-0">

                                    <div>
                                        <h5 class="text-primary">Bienvenido !</h5>
                                        <p class="text-muted">Inicia sesción</p>
                                    </div>

                                    <div class="mt-4">
                                        <form action="@Url.Action("Index","Login")" method="post">

                                            <div class="mb-3">
                                                <label for="username" class="form-label">Nombre de usuario</label>
                                                <input type="text" class="form-control" id="username" name="nombre" placeholder="Ingrese sus usuario">
                                            </div>

                                            <div class="mb-3">
                                                <div class="float-end">
                                                    <a href="#" class="text-muted">¿Has olvidado tu contraseña?</a>
                                                </div>
                                                <label class="form-label">Contraseña</label>
                                                <div class="input-group auth-pass-inputgroup">
                                                    <input type="password" class="form-control" name="clave" placeholder="Ingrese sus contraseña" aria-label="Password" aria-describedby="password-addon">
                                                    <button class="btn btn-light " type="button" id="password-addon"><i class="bx bx-show"></i></button>
                                                </div>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="remember-check">
                                                <label class="form-check-label" for="remember-check">
                                                    Recordar
                                                </label>
                                            </div>
                                            <label class="text-bg-danger">@(ViewData["Mesnaje"])</label>
                                            <div class="mt-3 d-grid">
                                                <button class="btn btn-primary waves-effect waves-light" type="submit">Acceder</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end -->
    </div>

    <!-- JAVASCRIPT -->
    <script src="~/Assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Assets/libs/node-waves/waves.min.js"></script>

    <!-- owl.carousel js -->
    <script src="~/Assets/libs/owl.carousel/owl.carousel.min.js"></script>

    <!-- auth-2-carousel init -->
    <script src="~/Assets/js/pages/auth-2-carousel.init.js"></script>

    <!-- App js -->
    <script src="~/Assets/js/app.js"></script>

</body>
</html>
