
@{
    ViewBag.Title = "Index";
}


<head>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.9.0/p5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.9.0/addons/p5.dom.min.js"></script>
    <script src="https://unpkg.com/ml5@latest/dist/ml5.min.js" type="text/javascript"></script>
    <!-- script de  -->
    <script src="~/Assets/cnn/entranar.js"></script>
    <style>
        a {
            margin-bottom: 5px;
        }
    </style>
</head>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <!-- Bara izquierda -->
            <div class="col-xl-4">
                <div class="bg-primary bg-soft">
                    <div class="row">
                        <div class="col-7">
                            <div class="text-primary p-3">
                                <h5 class="text-primary">ENTRENAMIENTO</h5>
                                <p>Entrenat objetos a la red neuronal</p>
                            </div>
                        </div>
                        <div class="col-5 align-self-end">
                            <img src="~/Assets/images/pngegg.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
             
                <div class="card-body">
                    <div class="card center-align">
                        <div class="card-body row">
                            <a class="btn btn-outline-primary BotonEntrenar">PET (Plástico)</a>
                            <a class="btn btn-outline-secondary BotonEntrenar">PEAD (Plástico denso)</a>
                            <a class="btn btn-outline-success BotonEntrenar">ACERO (Metales)</a>
                            <a class="btn btn-outline-info BotonEntrenar">LATA </a>
                            <br />
                            <a class="btn btn-outline-warning BotonEntrenar">No es un residuo solido</a>
                        </div>
                    </div>
                </div>
                
      
                <div class="card-body">
                    <div class="card bg-success text-white-50">
                        <div class="card-body form-inline">
                       
                            
                        
                            <div class="mb-3">
                                <label class="form-label">Entrenar objeto</label>
                                <input type="text" class="form-control" id="TextBox" placeholder="Nombre del objeto">
                            </div>
                            <button id="TextBoxBoton" type="submit" class="btn btn-primary mb-2">Agregar Objeto</button>
                            <div id="mensaje" class="alert-danger"></div>
                        </div>
                    </div>
                </div>
             
                <div class="card-body">
                    <div class="card bg-info text-white-50">
                        <div class="card-body form-inline">
                            <h5 class="text-white">Acciones</h5>
                            <div class="row justify-content-around ">
                                <a id="CargarBoton" class="col btn btn-danger m-2">Cargar</a>
                                <a id="SalvarBoton" class="col btn btn-primary m-2">Guardar</a>
                                <a id="LimpiarBoton" class="col btn btn-warning m-2">Limpiar</a>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>

            <div class="col-xl-8">
                
                <div class="card-body">
                    <div class="card bg-primary text-white-50">
                        <div class="card-body">
                            <span id="CartaMensaje" class="card-title mb-4 text-white">Cargando...</span>
                        </div>
                        
                    </div>
                    <div class="d-sm-flex flex-wrap"  style="width:100%;" id="micanva">
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>



