@model List<Proyecto_Web_CSI.Models.Usuario>
@{
    ViewBag.Title = "Index";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">Lista de Usuarios</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Usuarios</a></li>
                            <li class="breadcrumb-item active">Administración</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-sm-flex align-items-end">
                            <a href="~/Usuarios/AgregarEditar/" class="btn btn-success waves-effect btn-label waves-light"><i class="bx bx-add-to-queue label-icon"></i>  Agregar</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" style="width: 70px;">#</th>
                                        <th scope="col">Nombres</th>
                                        <th scope="col">Apellidos</th>
                                        <th scope="col">Correo</th>
                                        <th scope="col">Usuario</th>
                                        <th scope="col">Estado</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="avatar-xs">
                                                    <span class="avatar-title rounded-circle">
                                                        M
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <h5 class="font-size-14 mb-1"><a href="javascript: void(0);" class="text-dark">@user.Empleado.nombres</a></h5>
                                                <p class="text-muted mb-0">@user.Rol.descripcion</p>
                                            </td>
                                            <td>@user.Empleado.nombres  @user.Empleado.apellidos</td>
                                            <td>@user.Empleado.email</td>
                                            <td>
                                                <div>

                                                    <a href="javascript: void(0);" class="badge badge-soft-primary font-size-11 m-1">@user.usuario1</a>
                                                </div>
                                            </td>
                                            <td>
                                                @(user.estado == "A"? "Activo" :"Inactivo")
                                            </td>
                                            <td>
                                                <ul class="list-inline font-size-20 contact-links mb-0">
                                                    <li class="list-inline-item px-2">
                                                        <a href="~/Usuarios/AgregarEditar/@user.usuario_id" class=" btn btn-warning waves-effect btn-label waves-light"><i class="bx bx-pencil label-icon"></i>Editar</a>
                                                    </li>                                                 
                                                </ul>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div> <!-- container-fluid -->
</div>

